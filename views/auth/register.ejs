<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@500&display=swap" rel="stylesheet">
    <!-- Google Font -->
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="css/register.css">
    <title>Sistem Pakar | Daftar Akun</title>
</head>

<body>

    <div id="app">

        <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
            <main class="py-4 px-5 my-3 shadow d-flex flex-column align-items-center rounded-3">
                <section class="mb-3 text-center">
                    <h1>Daftar Akun</h1>
                    <h5 class="text-danger">
                        <%= flash_messages %>
                    </h5>
                </section>
                <form action="/register" method="post">

                    <div class="mb-3">
                        <label for="user" class="form-label">Nama Akun</label>
                        <input type="text" name="user" id="user" required minlength="5" maxlength="20"
                            v-model="slugText" class="form-control" aria-describedby="userHelp" placeholder="Contoh: Arya_Adhi">
                        <div id="userHelp" class="form-text">Harap menggunakan nama yang mudah untuk kamu ingat.</div>
                    </div>

                    <div class="mb-3">
                        <label for="nama" class="form-label">User Id</label>
                        <input type="text" name="nama" id="nama" required minlength="5" maxlength="20"
                            v-model="slugTize" readonly class="form-control" aria-describedby="nameHelp" placeholder="Akan ter-generate otomatis">
                        <div id="nameHelp" class="form-text">User id akan digunakan untuk kamu masuk ke akun.</div>
                    </div>

                    <div class="mb-3">
                        <label for="sandi" class="form-label">Sandi</label>
                        <input type="password" name="sandi" id="sandi" required minlength="5" maxlength="10"
                            class="form-control" aria-describedby="pwHelp" placeholder="Minimal 5 Karakter">
                        <div id="pwHelp" class="form-text">Harap untuk menjaga selalu kerahasiaan sandi kamu.</div>
                    </div>

                    <div class="mb-3" class="form-label">
                        <label for="validasi">Konfirmasi Sandi</label>
                        <input type="password" name="validasi" id="sandi" required minlength="5" maxlength="10"
                            class="form-control" aria-describedby="vlHelp" placeholder="Pastikan sudah sesuai">
                        <div id="vlHelp" class="form-text">Konfirmasikan ulang sandi kamu agar sesuai.</div>
                    </div>

                   <div class="row">
                    <button type="submit" class="btn btn-dark rounded-1">Kirim</button>
                    <a href="/login" class="btn btn-outline-dark rounded-1 mt-3">Sudah memiliki akun?</a>
                   </div>
                </form>
            </main>
        </div>

    </div>
    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/vue@2"></script>
    <script>
        var app = new Vue({
            el: '#app',
            data: {
                slugText: '',
            },
            computed: {
                slugTize: function () {
                    return this.slugText
                        .replace(/[^\w ]+/g, '')
                        .replace(/ +/g, '_');
                },
            }
        })
    </script>
</body>

</html>